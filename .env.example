# Server
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/eventify?schema=public"

# Auth
JWT_ACCESS_SECRET="change-me-access"
JWT_REFRESH_SECRET="change-me-refresh"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"

# PDF
PDF_BRAND_NAME="Eventify Next Gen"
PDF_BASE_URL="http://localhost:4000"

# Storage (attachments)
# local = store files under /uploads and serve via this API
# s3 = store files in S3/S3-compatible storage (recommended for production)
STORAGE_DRIVER=local

# S3 (required only if STORAGE_DRIVER=s3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Optional for S3-compatible providers (Cloudflare R2, DigitalOcean Spaces, MinIO)
# S3_ENDPOINT=https://<endpoint>

# Optional: CDN/public base URL for objects. Example:
# S3_PUBLIC_BASE_URL=https://cdn.yourdomain.com
S3_PUBLIC_BASE_URL=
